<%- include("../includes/header.ejs", {title:"Payload - View All"}); %>
<h1>Payloads</h1>
<a href="/payload/add">Add New Payload</a> <br />
<br />

<table border="2">
    <tr><th>Name</th><th>Destination</th><th>Success Status</th><th>Launch Vehicle</th><th>Organization</th><th>Actions</th></tr>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td><a href="/payload/?payload_id=<%= result[i].payload_id %>"><%= result[i].pay_name %></a></td>
        <td><%= result[i].destination %></td>
        <td><%= result[i].success_status %></td>
        <td><a href="/vehicle/?vehicle_id=<%= result[i].vehicle_id %>"><%= result[i].veh_name%></a></td>
        <td><a href="/organization/?organization_id=<%= result[i].organization_id %>"><%= result[i].org_name%></a></td>
        <td>
            <button onclick="event.preventDefault();window.location.href='/payload/edit/?payload_id=<%= result[i].payload_id %>'">Edit</button>
            <form action="/payload/delete/">
                <input type="hidden" name="payload_id" id="payload_id" value="<%= result[i].payload_id %>" />
                <input type="submit" value="Delete"/>
            </form>
        </td>
    </tr>
    <% } %>
</table>
<br />
<a href="/">Back to Index</a>
